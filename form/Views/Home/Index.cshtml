@{
    ViewData["Title"] = "Formulaire";
}

<!DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-cancel {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Job Form</h2>
        <form asp-action="SubmitForm" method="post">
            <div class="form-group">
                <label for="nom">Nom:</label>
                <input type="text" class="form-control" id="nom" name="nom">
            </div>
            <div class="form-group">
                <label for="prenom">Prénom:</label>
                <input type="text" class="form-control" id="prenom" name="prenom">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="adresse">Adresse:</label>
                <input type="text" class="form-control" id="adresse" name="adresse">
            </div>
            <div class="form-group">
                <label>Sexe:</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="male" name="sexe" value="male">
                    <label class="form-check-label" for="male">Homme</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="female" name="sexe" value="female">
                    <label class="form-check-label" for="female">Femme</label>
                </div>
            </div>
            <div class="form-group">
                <input type="checkbox" id="developpeur" name="role" value="developpeur">
                <label for="developpeur">Développeur</label><br>
                <input type="checkbox" id="business" name="role" value="business">
                <label for="business">Business Analyste</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <button type="reset" class="btn btn-secondary btn-cancel">Annuler</button>
            </div>
        </form>
    </div>
</body>
</html>
